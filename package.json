{
  "name": "pompelmi",
  "version": "0.14.0-dev.25",
  "description": "RFI-safe file uploads for Node.js â€” Express/Koa/Next.js middleware with deep ZIP inspection, MIME/size checks, and optional YARA scanning.",
  "main": "dist/pompelmi.cjs.js",
  "module": "dist/pompelmi.esm.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "browser": {
    "yara": false,
    "util": false
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pompelmi/pompelmi.git",
    "directory": "packages/engine"
  },
  "homepage": "https://pompelmi.github.io/pompelmi/",
  "pnpm": {
    "overrides": {
      "process": "0.11.10",
