{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "**/node_modules/**",
      "**/dist/**",
      "coverage/**",
      "samples/**",
      "website/**",
      "site/**",
      "tmp-*/**",
      ".tmp-*/**"
    ]
  }
}
