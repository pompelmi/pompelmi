{
  "name": "@pompelmi/express-middleware",
  "version": "0.16.0-dev.41",
  "description": "Express middleware to scan uploads with pompelmi (YARA).",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist/**",
    "README.md",
    "LICENSE*",
    "dist",
    "package.json",
    "CHANGELOG*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pompelmi/pompelmi.git",
    "directory": "packages/express-middleware"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean --external unzipper,@aws-sdk/client-s3",
    "dev": "tsup src/index.ts --watch --dts --format esm,cjs",
    "test": "vitest run",
    "lint": "echo \"(opzionale)\"",
    "demo": "node tests/demo-server.mjs",
    "preview": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npx -y publint && npm pack --dry-run",
    "typecheck": "tsc -p tsconfig.json --noEmit || tsc -p tsconfig.build.json --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "@pompelmi/core": "workspace:*"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "3.2.4",
    "express": "^4.19.0",
    "multer": "^2.0.2",
    "supertest": "^7.0.0",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0",
    "vitest": "2.1.9",
    "@pompelmi/core": "workspace:*"
  },
  "license": "MIT",
  "dependencies": {},
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.17"
  },
  "private": false,
  "typings": "dist/index.d.ts"
}
