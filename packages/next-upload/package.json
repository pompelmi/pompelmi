{
  "name": "@pompelmi/next-upload",
  "version": "0.17.0-dev.37",
  "description": "Next.js (App Router) upload handler with pompelmi (YARA), MIME sniffing, ZIP anti-bomb, and size/extension policies.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist/**",
    "README.md",
    "LICENSE*",
    "dist",
    "package.json",
    "CHANGELOG*"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --clean --dts --format esm,cjs",
    "dev": "tsup --watch --dts --format esm,cjs",
    "demo": "node tests/demo-server.mjs",
    "preview": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npx -y publint && npm pack --dry-run",
    "typecheck": "tsc -p tsconfig.json --noEmit || tsc -p tsconfig.build.json --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit"
  },
  "peerDependencies": {
    "@pompelmi/core": "workspace:*"
  },
  "dependencies": {
    "file-type": "^18.7.0",
    "unzipper": "^0.12.3",
    "@pompelmi/core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^20.19.10",
    "@vitest/coverage-v8": "2.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.5.0",
    "vitest": "2.1.9",
    "@pompelmi/core": "workspace:*"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "engines": {
    "node": ">=18.17"
  },
  "private": false,
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/pompelmi/pompelmi",
    "directory": "packages/next-upload"
  }
}
