{
  "name": "@pompelmi/core",
  "version": "0.17.0-dev.37",
  "private": "false",
  "description": "Lightweight file scanning core with optional YARA rules (Node + Remote Engine)",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.17"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE*",
    "package.json",
    "CHANGELOG*"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "npm pack --dry-run",
    "prepublishOnly": "npm run build && npx -y publint && npm pack --dry-run",
    "typecheck": "tsc -p tsconfig.json --noEmit || tsc -p tsconfig.build.json --noEmit",
    "typecheck:strict": "tsc -p tsconfig.strict.json --noEmit"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/tar-stream": "^3.1.4",
    "@vitest/coverage-v8": "2.1.9",
    "tsup": "8.5.0",
    "vitest": "2.1.9"
  },
  "dependencies": {
    "tar-stream": "^3.1.7"
  },
  "sideEffects": false,
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/pompelmi/pompelmi",
    "directory": "packages/pompelmi"
  }
}
