{
  "name": "@pompelmi/nestjs",
  "version": "0.1.0",
  "description": "NestJS integration module for Pompelmi malware scanner",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.17"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE*",
    "package.json"
  ],
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --format esm,cjs --clean",
    "test": "vitest run",
    "test:watch": "vitest",
    "preview": "npm pack --dry-run",
    "prepublishOnly": "npm run build",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/core": "^10.0.0 || ^11.0.0",
    "reflect-metadata": "^0.1.13 || ^0.2.0",
    "rxjs": "^7.0.0"
  },
  "dependencies": {
    "@pompelmi/core": "^0.26.0"
  },
  "devDependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^5.0.6",
    "@types/multer": "^1.4.12",
    "@types/node": "^24.3.0",
    "@vitest/coverage-v8": "2.1.9",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "tsup": "8.5.0",
    "vitest": "2.1.9"
  },
  "sideEffects": false,
  "typings": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/pompelmi/pompelmi",
    "directory": "packages/nestjs-integration"
  }
}
